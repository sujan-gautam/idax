{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run generate && npm run build:packages && npm run build:web && npm run build:api"
    },
    "deploy": {
        "startCommand": "npm start -w @project-ida/unified-api",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}